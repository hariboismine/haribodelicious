<!DOCTYPE html>
<html>
<body>

<h1>둘리님만을 위한 페이지</h1>

<button onclick="typeWriter()">이거먼저!!</button>


<p id="demo"></p>

<script>
var i = 0;
var txt = '둘리님싸랑해요. 햄깅 짤 볼 때 마다 님 생각나요';
var speed = 50;

function typeWriter() {
  if (i < txt.length) {
    document.getElementById("demo").innerHTML += txt.charAt(i);
    i++;
    setTimeout(typeWriter, speed);
  }
}

</script>

<div><button onclick="typeWriter2()">그다음 이거</button>

<script>
var k = 0;
var txt2 =   '  I   LOVE     YOU';
var speed = 50;

function typeWriter2() {
  if (k < txt2.length) {
    document.getElementById("demo").innerHTML += txt2.charAt(k);
    k++;
    setTimeout(typeWriter2, speed);
  }
}

</script>
</div>

</body>
</html>
